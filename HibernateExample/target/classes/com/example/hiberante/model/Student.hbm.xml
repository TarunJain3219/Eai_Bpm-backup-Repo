<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.example.hiberante.model.Student" table="STUDENT">
        <id name="id" type="integer" column="ID"> </id>
        <property name="studentName" type="string" column="STUDENT_NAME" not-null="true" />
        <property name="rollnumber" type="integer" column="ROLL_NUMBER" not-null="true" />
        <property name="course" type="string" column="COURSE" not-null="true" />
    </class>
</hibernate-mapping>